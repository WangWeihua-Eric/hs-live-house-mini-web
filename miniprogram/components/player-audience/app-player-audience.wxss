@import '../../style/flex-base.wxss'

.audience-content {
    height: 100%;
    width: 100%;
    box-sizing: border-box;
    padding: 160rpx 20rpx 47rpx 16rpx;
}

.audience-header {
    width: 100%;
}

.audience-header-left {
    width: 365rpx;
    height: 80rpx;
    background: rgba(0, 0, 0, 0.25);
    border-radius: 45rpx;
}

.audience-teacher-img {
    width: 68rpx;
    height: 68rpx;
    border-radius: 50%;
    margin-left: 6rpx;
    overflow: hidden;
}

.audience-teacher-info {
    height: 100%;
    margin-left: 4rpx;
}

.audience-teacher-name {
    font-size: 28rpx;
    font-family: PingFangSC-Medium,PingFang SC;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
}

.audience-teacher-tag {
    font-size: 26rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    color: rgba(255, 255, 255, 1);
}

.add-action-img {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 14rpx;
}

.audience-user-img-list {
    margin-right: 11rpx;
}

.audience-user-rank {
    height: 100%;
    margin-left: 6rpx;
}

.audience-user-img {
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
    overflow: hidden;
}

.audience-user-tag {
    width: 62rpx;
    height: 21rpx;
    border-radius: 10.5rpx;
    margin-top: -10rpx;
}

.switch-window-info {
    width: 100rpx;
    height: 100rpx;
}

.switch-window-btn {
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    overflow: hidden;
}

.audience-bottom {
    width: 100%;
    height: 100%;
/*    background-color: white;*/
}

.live-list-content {
    max-height: 369rpx;
    box-sizing: border-box;
    padding-left: 9rpx;
    overflow: scroll;
}

.scroll-content {
    max-height: 369rpx;
}

.live-text-item {
    max-width: 460rpx;
    background: rgba(0, 0, 0, 0.29);
    border-radius: 30rpx;
    box-sizing: border-box;
    padding: 16rpx;
    font-size: 30rpx;
    font-family: SourceHanSansCN-Normal,SourceHanSansCN;
    color: rgba(245, 185, 83, 1);
    margin-bottom: 10rpx;
}

.text-msg {
    color: #FFFFFF;
}

.share-live {
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-left: 21rpx;
    margin-right: 30rpx;
}

.send-rose {
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    overflow: hidden;
}



::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}