@import '../../../../style/flex-base.wxss'

.content {
    width:720rpx;
    height:180rpx;
    background:rgba(62,69,150,1);
    border-radius:20rpx;
    box-sizing: border-box;
    padding: 17rpx 21rpx 21rpx 22rpx;
}

.content-left {
    height: 100%;
}

.lesson-info {
    margin-left: 27rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
}

.lesson-name {
    font-size:32rpx;
}

.teacher-name {
    font-size:26rpx;
    margin-top: 12rpx;
}

.lesson-time {
    font-size:22rpx;
}

.card-right {
    height: 100%;
}

.book-btn {
    width:186rpx;
    height:56rpx;
    background:rgba(255,255,255,1);
    border-radius:26rpx;
    font-size:30rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(106,102,241,1);
}

.book-number {
    font-size:20rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    color:rgba(255,255,255,1);
    margin-top: 8rpx;
}