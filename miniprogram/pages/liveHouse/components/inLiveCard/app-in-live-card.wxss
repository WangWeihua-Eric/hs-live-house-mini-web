@import '../../../../style/flex-base.wxss'

.content {
    width:720rpx;
    height:547rpx;
    background:rgba(62,69,150,1);
    border-radius:9rpx;
    box-sizing: border-box;
    padding: 11rpx 11rpx 31rpx 11rpx;
}

.card-info {
    width: 100%;
    height: 100%;
}

.card-text {
    height: 100%;
    margin-left: 20rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
}

.teacher-name {
    font-size:32rpx;
}

.teacher-info {
    font-size:22rpx;
}

.card-right {
    height: 100%;
}

.book-btn {
    width:186rpx;
    height:56rpx;
    background:rgba(255,255,255,1);
    border-radius:26rpx;
    font-size:30rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(106,102,241,1);
}

.book-number {
    font-size:20rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    color:rgba(255,255,255,1);
    margin-top: 4rpx;
}